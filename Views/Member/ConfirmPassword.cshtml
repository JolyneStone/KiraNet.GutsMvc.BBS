@{
    ViewData["Title"] = "重置密码";
}
<h3><span class="glyphicon glyphicon-flag" aria-hidden="true"></span> 重置密码</h3>
<form id="form_submit" name="form_submit" method="post">
    <div class="form-horizontal">
        <h4>  GutsMvcBBS：欢迎您成为我们的一份子，让我们一起分享生活中的喜怒哀乐吧。</h4>
        <hr />
        <input type="hidden" id="UserName" name="UserName" value="@Model.UserName" />
        <div class="form-group">
            <label class="col-md-2 control-label">密码</label>
            <div class="col-md-3">
                <input id="userPwd" name="userPwd" required="required" type="password" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">确认密码</label>
            <div class="col-md-3">
                <input id="comfirmPwd" name="comfirmPwd" type="password" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="提 交" name="btnSubmit" class="btn btn-default" />
                <span id="msgbox" style="color:red">@ViewData["msgbox"]</span>
            </div>
        </div>
    </div>
</form>
<br />
<div>
    <a href="/member/login">有账号去登录</a> | <a href="/member/register">没账号这里注册</a>
</div>

<script src="../../wwwroot/bower_components/jquery-validate/jquery.validate.min.js"></script>
<script src="../../wwwroot/bower_components/jquery-validate/messages_zh.js"></script>
<script>
    $().ready(function () {
        $("#form_submit").validate({
            rules: {
                userPwd: {
                    required: true,
                    minlength: 6,
                    maxlength: 20
                },
                comfirmPwd: {
                    required: true,
                    minlength: 6,
                    maxlength: 20,
                    equalTo: "#userPwd"
                }
            },
            message: {
                userPwd: {
                    required: "请输入密码",
                    minlength: "密码不能小于6个字符",
                    maxlength: "密码不能超过20个字符"
                },
                confirmPwd: {
                    required: "请输入密码",
                    minlength: "密码不能小于6个字符",
                    maxlength: "密码不能超过20个字符",
                    equalTo: "两次密码输入不一致"
                }
            }
        });
    });
</script>